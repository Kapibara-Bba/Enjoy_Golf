<div class="container">
  <div class="">
    <div class="record-show">
      <table class="table">
        <thead>
          <tr>
            <th>日付</th>
            <th>コース</th>
            <th>スコア</th>
            <th>パット</th>
          </tr>
        </thead>
        <tbody>
          <tr class="score-show">
            <td><%= @record.days %></td>
            <td><%= @record.course %></td>
            <td><%= @record.hole1 + @record.hole2 + @record.hole3 + @record.hole4 + @record.hole5 + @record.hole6 + @record.hole7 +
                    @record.hole8 + @record.hole9 + @record.hole10 + @record.hole11 + @record.hole12 + @record.hole13 + @record.hole14 +
                    @record.hole15 + @record.hole16 + @record.hole17 + @record.hole18 %></td>
            <td><%= @record.putt %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "削除する", record_path(@record), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
    </div>
  </div>
</div>
