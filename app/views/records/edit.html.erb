<div class="container">
  <div class="record-edit">
    <h3 class="record-edit-title">スコア編集</h3>
  </div>
  <%= form_with model: @record, method: :patch, local: true do |f| %>
    <div class="score">
      <div class="record-form">
        <div class="course-info">
          <div class="course-text">
            <i class="fas fa-flag"></i>
            <p>ゴルフ場情報</p>
          </div>
          <div class="form_group">
            <%= f.label :ゴルフ場 %>
            <%= f.text_area :course, rows:1 %>
          </div>
          <div class="form_group">
            <%= f.label :都道府県 %>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
          </div>
        </div>
        <div class="play-info">
          <div class="play-text">
            <i class="fas fa-golf-ball"></i>
            <p>プレー情報</p>
          </div>
          <div class="form_group">
            <%= f.label :ラウンド日 %>
            <%= f.date_field :days %>
          </div>
          <div class="form_group">
            <%= f.label :天気 %>
            <%= f.select :weather, Record.weathers.keys, {} %>
          </div>
          <div class="form_group">
            <%= f.label :風 %>
            <%= f.select :wind, Record.winds.keys, {} %>
          </div>
        </div>
      </div>
      <div class="score-form">
        <div class="first-half">
          <div class="score-info">
            <%= f.label :１ホール %>
            <%= f.number_field :hole1, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole1_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :２ホール %>
            <%= f.number_field :hole2, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole2_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :３ホール %>
            <%= f.number_field :hole3, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole3_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :４ホール %>
            <%= f.number_field :hole4, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole4_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :５ホール %>
            <%= f.number_field :hole5, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole5_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :６ホール %>
            <%= f.number_field :hole6, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole6_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :７ホール %>
            <%= f.number_field :hole7, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole7_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :８ホール %>
            <%= f.number_field :hole8, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole8_putt, min: 0 %>
          </div>
          <div class="score-info">
            <%= f.label :９ホール %>
            <%= f.number_field :hole9, min: 0 %>
            <%= f.label :パット %>
            <%= f.number_field :hole9_putt, min: 0 %>
          </div>
        </div>
        <div class="latter-half">
          <div class="score-info">
            <%= f.label :１０ホール %>
            <%= f.number_field :hole10, min: 0 %>
