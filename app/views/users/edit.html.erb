<div class="container">
  <div class="">
    <div class="user-name">
      <%= @user.name %>
    </div>
  </div>
  <div class="user-edit">
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
      <%= f.label :名前 %>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <%= link_to '戻る', user_path(current_user), class: 'btn btn-secondary' %>
    <% end %>

  </div>
</div>
