<!DOCTYPE html>
<html>
  <head>
    <title>EnjoyGolf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/7b4ac370e3.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="<%= controller.controller_name %>-<%= controller.action_name %>">
    <div class="wrapper">
      <header>
        <%= link_to root_path, data: {"turbolinks" => false} do %>
          <div class="logo"></div>
        <% end %>
        <nav>
          <ul>
            <li class="top-header"><%= link_to 'トップページ', root_path %></li>
            <li class="top-header"><%= link_to 'Enjoy_Golfとは？', homes_about_path %></li>
            <li class="top-header"><%= link_to 'ログイン', new_user_session_path %></li>
            <li class="top-header"><%= link_to '新規登録', new_user_registration_path %></li>
            <li class="top-header"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        </nav>
      </header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= yield %>
  </body>
</html>
